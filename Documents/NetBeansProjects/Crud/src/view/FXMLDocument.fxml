      <TableView fx:id="tblUsuarios" layoutX="20.0" layoutY="373.0" onMouseClicked="#carregarCampos" prefHeight="149.0" prefWidth="308.0">
         <columns>
            <TableColumn fx:id="colNome" prefWidth="75.0" text="Nome" />
