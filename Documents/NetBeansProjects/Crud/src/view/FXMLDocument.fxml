      </Label>
      <Label layoutX="16.0" layoutY="34.0" prefHeight="17.0" prefWidth="319.0" text="-----------------------------------------------------------------" textFill="#35ff07" />
      
      <TextField fx:id="txtNome" alignment="CENTER" layoutX="161.0" layoutY="62.0" prefHeight="25.0" prefWidth="157.0" promptText="Nome" />
      <TextField fx:id="txtEmail" alignment="CENTER" layoutX="161.0" layoutY="93.0" prefHeight="25.0" prefWidth="157.0" promptText="Email" />
      <TextField fx:id="txtLogin" alignment="CENTER" layoutX="161.0" layoutY="124.0" prefHeight="25.0" prefWidth="157.0" promptText="Login" />
      <PasswordField fx:id="txtSenha" alignment="CENTER" layoutX="161.0" layoutY="155.0" prefHeight="25.0" prefWidth="157.0" promptText="Senha" />
      
      <Button fx:id="btnEnviar" alignment="CENTER" layoutX="161.0" layoutY="190.0" mnemonicParsing="false" onAction="#cadastrar" prefHeight="34.0" prefWidth="157.0" text="Cadastrar Usuário" textFill="#28b22f">
