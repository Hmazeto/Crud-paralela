            <TableColumn fx:id="colLogin" prefWidth="70.0" text="Login" />
            <TableColumn fx:id="colSenha" prefWidth="70.0" text="Senha" />
         </columns>
      </TableView>
      
      <HBox layoutX="14.0" layoutY="62.0" prefHeight="299.0" prefWidth="122.0">
         <children>
            <ImageView fitHeight="299.0" fitWidth="138.0" pickOnBounds="true" preserveRatio="true" />
